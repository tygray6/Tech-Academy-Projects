<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Bewander</title>
    <link rel="icon" type="image" href="~/Images/Global/icon.gif" />
    <link href='https://fonts.googleapis.com/css?family=Ubuntu:400,300' rel='stylesheet' type='text/css' />
    <link href="~/Content/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.2/jquery.min.js"></script>
    @RenderSection("autocomplete", false)
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href='@Url.Action("Index", "Home")'>
                    <img src="~/Images/Global/logo.png" class="navbar-brand" />
                </a>
                @*@Html.ActionLink("Bewander", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Create", "Create", "Reviews")</li>
                    <li>@Html.ActionLink("Search", "Index", "Reviews")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <span> &copy; @DateTime.Now.Year Bewander -                                  </span>
            <span class="footerLink"> @Html.ActionLink("Contact", "Contact", "Home")     </span>
            <span class="footerLink"> @Html.ActionLink("About", "About", "Home")           </span>
            <span class="footerLink"> @Html.ActionLink("Help", "Help", "Home")           </span>
            <span class="footerLink"> @Html.ActionLink("FAQ", "FAQ", "Home")             </span>
            <span class="footerLink"> @Html.ActionLink("Privacy", "Privacy", "Home")     </span>
            <span class="footerLink"> @Html.ActionLink("Terms of Service", "TOS", "Home")</span>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/main")
    @RenderSection("scripts", required: false)
</body>
</html>
